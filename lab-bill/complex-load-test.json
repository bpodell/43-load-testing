{
    "config": {
      "target": "http://localhost:3000",
      "phases": [
        {
          "duration": 2,
          "arrivalRate": 2
        },
        {
          "duration": 2,
          "arrivalRate": 2
        }
      ]
      ,
      "processor" : "./load-test-create-user.js"
    },
    "scenarios": [
      {
        "name" : "Create Users",
        "flow": [
          {
            "function": "create"
          },
          {
            "post": {
              "url": "/signup",
              "afterResponse": "getToken",
              "json": {
                "username": "{{ username }}",
                "email": " {{ email }}",
                "password": "{{ password }}"
              }
            }
          }
          ,
          {
            "post": {
                "url": "/profiles",
                "headers": {
                  "Authorization": "Bearer {{ token }}"
                },
                "json": {
                  "bio": "{{bio}}"
                }
              }
          }
        ]
      }
    ]
  }